{
    if (keyboard_check(vk_right) &amp;&amp; place_free(x+4,y)){
         motion_add(0, 1); //accelerate right
         if(canSlash)
         {
         sprite_index = sprite_player_right; // change sprite to player right
         }
         sword_x = 32; //pointing variables for sword
         sword_y = 0;
         facing = 0;
    }
     if (keyboard_check(vk_left) &amp;&amp; place_free(x-4,y)) {
         motion_add(180, 1);
         if(canSlash)
         {
            sprite_index = sprite_player_left;
         }
         sword_x = -32; 
         sword_y = 0;
         facing = 180;
    }
     if (keyboard_check(vk_up) &amp;&amp; place_free(x,y-4)) {
         motion_add(90, 1);
         if (canSlash)
         {
            sprite_index = sprite_player_back;
         }
         sword_x = 0;
         sword_y = -32;
         facing = 90;
    }
     if (keyboard_check(vk_down) &amp;&amp; place_free(x,y+4)) {
        motion_add(270, 1);
        if (canSlash)
        {
         sprite_index = sprite_player_front;
        }
        sword_x = 0;
         sword_y = 32;
         facing = 270;
             }
    
    if (abs(speed)&gt;0) friction = surface_friction;
    else friction = 0;
    
    if (abs(speed)&gt;5) speed = 5;
    /// arrow fire
    if (keyboard_check(vk_control) &amp;&amp; canShoot){
        instance_create(x,y,object_arrow); 
        canShoot = false;
        alarm[0] = 45; //set alarm 15 steps
        
    }
    /// sword slash
    if (keyboard_check_pressed(vk_space) &amp;&amp; canSlash) {
        if (facing == 90)
        {
        sprite_index = sprite_player_back_sword;
        }
        if (facing == 270)
        {
        sprite_index = sprite_player_front_sword;
        }
        if (facing == 0)
        {
            sprite_index = sprite_player_right_sword;
        }
        if (facing == 180)
        {
            sprite_index = sprite_player_left_sword;
        }
        instance_create(x+sword_x,y+sword_y, object_slash);
        canSlash = false;
        alarm[1] = 7;
    }
    if (keyboard_check(vk_nokey)){
        image_speed = 0;
    }    
    else
    {
        image_speed = 1;
    }
}


